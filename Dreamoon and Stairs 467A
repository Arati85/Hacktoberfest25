#include<bits/stdc++.h>
using namespace std;
int solve(int n,int m){
    if(n<m){
        return -1;
    }
    else{
        int p=n%2;
       for(int i=(n/2+p);i<n;i++){
         if(i%m==0){
            return i;
         }
       }
    }
}
int main(){
    int n,m;
    cin>>n>>m;
    cout<<solve(n,m);
    return 0;
}
